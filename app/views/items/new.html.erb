<h1>Create new Item</h1>

<%= form_for @item do |f| %>
	<% if @item.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@item.errors.count, "error") %> prevented this itemfrom saving </h2>
				<ul>
					<% @item.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>	
	<% end %>

	<p>Цена: <br /><%= f.text_field :price %></p>
	<p>Название: <br /><%= f.text_field :name %></p>
	<p>Опиание: <br /><%= f.text_field :description %></p>
	<p>Вес: <br /><%= f.text_field :weight %></p>

	<p><%= f.submit "Создать товар" %></p>

<% end %>