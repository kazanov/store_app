<h1>Edit Item</h1>

<%= form_for @item do |f| %>

	<p>Цена: <br /><%= f.text_field :price %></p>
	<p>Название: <br /><%= f.text_field :name %></p>
	<p>Опиание: <br /><%= f.text_field :description %></p>
	<p>Вес: <br /><%= f.text_field :weight %></p>

	<p><%= f.submit "Изменить товар" %></p>

<% end %>